@model List<ModelMoneda>

@{
    ViewData["Title"] = "TP_Cripto";
}

@if( @ViewBag.Usuario != "" && @ViewBag.Usuario != null )
{
    Layout = "~/Views/Shared/_Layout_logout.cshtml";

}else{
    Layout = "~/Views/Shared/_Layout_login.cshtml";

}


<section id="hero" class="hero-bg m-0 p-0"  >
    <div class="container w-100 align-content-center justify-content-center">
        <div class="text-light align-content-center">

    <h1>
      @ViewData["Title"]
    </h1>
 

        </div>
    </div>
</section>

<section class=" d-flex flex-wrap p-5 m-0 justify-content-around" style="background-image: linear-gradient(rgba(100,110,100,.9), rgba(0,0,0,1));">

    @foreach (var item in Model)
    {
        <div class="card border-2 border-dark mb-2" style="width: 18rem;">
            <div class="card-body p-0 text-center">
                <h5 class="card-title bg-dark p-3 text-light">@item.Nombre</h5>
                <h6 class="card-subtitle mb-2 p-1 text-muted">Cotizacion en USD</h6>
                <ul class="card-text text-start pb-5 ">
                    <li>@item.CotizacionEnUSD</li>
                </ul>
            </div>
        </div>
    }

</section>

