@model ModelCliente;

@{
    ViewData["Title"] = "Editar Perfil";    
    Layout = "~/Views/Shared/_Layout_logout.cshtml";
}


<body class=" p-0 pb-5 m-0 main-bg ">
    <div class="ps-5 pe-5">

        <div class="card mt-5 mb-5 ms-auto me-auto col-12 col-sm-8 col-md-6">

            <h2 class="card-header bg-dark" style="color:white">
                @ViewData["Title"]
            </h2>
            @if (TempData["Message"] != null)
            {
                <span class="text-danger"> @TempData["Message"] </span>
            }

            @if (TempData["Respuesta"] != null)
            {
                <h4 class="text-succes"> @TempData["Respuesta"] </h4>
            }
            else
            {
                <div class="card-body" style="background-color:lightgray">

                    <form method="post" asp-action="Perfil">
                        <input asp-for=Id type="hidden" class="form-control" />

                        <div class="mb-3">
                            <label asp-for=Usuario class="form-label">Usuario</label>
                            <input asp-for=Usuario type="text" class="form-control" readonly>
                            <span asp-validation-for=Usuario class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for=Nombre class="form-label">Nombre</label>
                            <input asp-for=Nombre type="text" class="form-control">
                            <span asp-validation-for=Nombre class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for=Clave class="form-label">Clave</label>
                            <input asp-for=Clave type="text" class="form-control">
                            <span asp-validation-for=Clave class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for=Mail class="form-label">Mail</label>
                            <input asp-for=Mail type="text" class="form-control">
                            <span asp-validation-for=Mail class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for=Telefono class="form-label">Telefono</label>
                            <input asp-for=Telefono type="text" class="form-control">
                            <span asp-validation-for=Telefono class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for=FechaAlta class="form-label">Fecha de alta</label>
                            <input asp-for=FechaAlta type="text" class="form-control" readonly>
                            <span asp-validation-for=FechaAlta class="text-danger"></span>
                        </div>

                        <div class="d-flex flex-column flex-sm-row ">
                        <button type="submit" class="btn btn-primary m-2">Actualizar</button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-danger m-2"> Cancelar</a>
                        </div>
                    </form>

                </div>
            }
        </div>
    </div>
</body>


